<body>
    <div class="seancePage" id="seanceListContainer">
    </div>
    <div class="sideBar">
        <h5 class="bienvenu">Bienvenue</h5>
        <ul>
            <li name="first" class="item2" id="item2" onclick="afficherDashboard()">Dashboard</li>
            <script>
                function afficherDashboard(){
                    location.href = '/profDashboard'
                }
            </script>
             <div  class='secondUl'onclick="dropdown(event)">
                <li class="dropdown-header">Cours</li>
                <% for (var i = 0; i < coursList.length; i++) { %>
                    <li class="elt" onclick="eltClick(event)" data="<%= coursList[i].id %>"><%= coursList[i].nom %></li>
                <% } %>
            </div>
            <% if (prof.role == 'CF') { %>
                <div  class='secondUl'onclick="dropdown(event)">
                    <li class="dropdown-header">Fili√®re <%= Filiere.nom %></li>
                    <% for (var i = 0; i < coursListParFiliere.length; i++) { %>
                        <li class="elt" onclick="eltClick(event)" data="<%= coursListParFiliere[i].idcours %>"><%= coursListParFiliere[i].nom %></li>
                    <% } %>
                </div>
            <% } %>
           
            

            <script>
                function eltClick(event){
                    var courseId = event.target.getAttribute('data');  
                    location.href = '/seanceList/' + courseId
                }
                
                
                function dropdown(event) {
                    var target = event.target;
                    if (target.tagName === 'LI' && target.classList.contains('dropdown-header')) {
                        target.classList.toggle('open');
                        var dropdownItems = target.parentNode.getElementsByTagName('li');
                        for (var i = 1; i < dropdownItems.length; i++) {
                            dropdownItems[i].classList.toggle('open');
                        }
                    }
                }
                function ajouterSeance(){
                    location.href = "/seance"
                }
            </script>
            <li name="third" class="item2" onclick="afficherProfil()">Profile</li>
            <script>
                function afficherProfil(){
                    location.href = '/comptes'
                }
            </script>
        </ul>
    </div>
    
