    <div class="seancePage" id="seanceListContainer">
    </div>
    <div class="window">
        <div class="window-panel">
            <h2 class="section-title">
                Bienvenue
            </h2>
            
            <ul class="tree">
                <li class="tree-branch">
                    <div class="tree-branch-action">
                        <a onclick="afficherDashboard()" class="tree-branch-link active">Home</a>
                        <script>
                            function afficherDashboard(){
                                location.href = '/profDashboard'
                            }
                        </script>
                    </div>
                </li>
                <li class="tree-branch">
                    <div class="tree-branch-action">
                        <a  class="tree-branch-link">Cours</a>
                        <button class="tree-branch-button">+</button>
                    </div>
                    <ul class="tree tree--sub">
                        <li class="tree-branch tree-branch--sub">
                            <div class="tree-branch-action">
                                <% for (var i = 0; i < coursList.length; i++) { %>
                                    <a class="tree-branch-link tree-branch-link--sub" onclick="eltClick(event)" data="<%= coursList[i].id %>"><%= coursList[i].nom %></a>
                                    <button class="tree-branch-button">+</button>
                                <% } %>
                            </div>
                        </li>
                    </ul>
                </li>
                <% if (prof.role == 'CF') { %>
                    <li class="tree-branch">
                        <div class="tree-branch-action">
                            <a class="tree-branch-link ">Fili√®re <%= Filiere.nom %></a>
                            <button class="tree-branch-button">+</button>
                        </div>
                        <ul class="tree tree--sub">
                            <li class="tree-branch tree-branch--sub">
                                <% for (var i = 0; i < coursListParFiliere.length; i++) { %>
                                    <div class="tree-branch-action">
                                        <a onclick="eltClick(event)" data="<%= coursListParFiliere[i].idcours %>" class="tree-branch-link tree-branch-link--sub">
                                            <%= coursListParFiliere[i].nom %>
                                        </a>
                                        <button class="tree-branch-button">+</button>
                                    </div>
                                <% } %>
                            </li>
                        </ul>
                    </li>
                <% } %>
                
            <script>
                function eltClick(event){
                    var courseId = event.target.getAttribute('data');  
                    location.href = '/seanceList/' + courseId
                }
                
                
                function dropdown(event) {
                    var target = event.target;
                    if (target.tagName === 'LI' && target.classList.contains('dropdown-header')) {
                        target.classList.toggle('open');
                        var dropdownItems = target.parentNode.getElementsByTagName('li');
                        for (var i = 1; i < dropdownItems.length; i++) {
                            dropdownItems[i].classList.toggle('open');
                        }
                    }
                }
                function ajouterSeance(){
                    location.href = "/seance"
                }
            </script>
                <li class="tree-branch">
                    <div class="tree-branch-action">
                        <a class="tree-branch-link" onclick="afficherProfil()">Profile</a>
                        <button class="tree-branch-button">+</button>
                    </div>
                    <script>
                        function afficherProfil(){
                            location.href = '/comptes'
                        }
                    </script>
                </li>
            </ul>
            <h2 class="section-title">
                <i class="fa fa-sign-out" aria-hidden="true" onclick="disconnect()"><span class="logout">Log out</span> </i>
            </h2>
            <script>
                function disconnect(){
                    location.href='/Deconnexion'
                }
            </script>
        </div>
        
