        .secondeUl {
        list-style-type: none;
        cursor: pointer;
        }
        .dropdown-header{
            color: #fff;
            margin-bottom: 10px;

        }
        .dropdown-header:hover{
            color: #fff;
            background-color: #537299;

        }

        .dropdown-header::after {

        display: inline-block;
        margin-left: 5px;
        transition: transform 0.3s ease;
        }


        .elt {
        display: none;
        color: white;
        margin-left: 10px;
        }
        .elt:hover {
        color: white;
        margin-left: 10px;
        background: rgb(48, 48, 100);
        padding-left: 10px;
        }

        .open {
        display: block;
        margin-bottom: 5px;
