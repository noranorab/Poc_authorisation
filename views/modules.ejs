                        <td colspan="3 ">
                            <button class="add-button " onclick="ajouterModule( 'ICCN') ">Ajouter un module</button>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3 " class="filiere-heading ">DATA</td>
                    </tr>
                    <tr>
                        <th>Semestre</th>
                        <th>Module</th>
                        <th>Actions</th>
                    </tr>
